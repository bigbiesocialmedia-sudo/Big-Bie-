rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    // For simple setup, we just check if they are logged in.
    // Ideally you should check request.auth.token.admin == true or a user role document.
    function isAuthenticated() {
      return request.auth != null;
    }

    // PRODUCTS: Public can read, only Admins can write
    match /products/{productId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // COLLECTIONS/SUBCOLLECTIONS metadata
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // USERS: Users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ORDERS: Users can read/write their own orders
    match /orders/{orderId} {
      allow create: if true; // Guests can create orders
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAuthenticated());
      allow update: if isAuthenticated(); // Only admins update status
    }

    // ADMIN: Only admins can touch admin data
    match /admin/{docId} {
      allow read, write: if isAuthenticated();
    }
    
    // Default deny for anything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
